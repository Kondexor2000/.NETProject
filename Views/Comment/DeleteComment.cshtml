@model MyApp.Models.Comments

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Comment</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }

        .container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            margin: auto;
            text-align: center;
        }

        h2 {
            margin-bottom: 20px;
        }

        p {
            margin-bottom: 20px;
        }

        .btn {
            display: inline-block;
            background-color: #dc3545;
            color: white;
            padding: 10px 15px;
            border-radius: 4px;
            text-align: center;
            text-decoration: none;
            font-size: 16px;
            cursor: pointer;
            border: none;
            margin-right: 10px;
        }

        .btn:hover {
            background-color: #c82333;
        }

        .btn:focus {
            outline: none;
        }

        .btn-secondary {
            background-color: #6c757d;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Delete Comment</h2>
        <p>Are you sure you want to delete this comment?</p>
        <form asp-action="DeleteComment" method="post">
            <button type="submit" class="btn">Yes, Delete</button>
        </form>
        <a href="@Url.Action("ReadComment", new { id = Model.Id })" class="btn btn-secondary">Cancel</a>
    </div>
</body>
</html>